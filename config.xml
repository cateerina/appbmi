<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.app.bmi"
    versionCode = "12"
    version     = "1.2" >

<!-- versionCode is optional and Android only -->

  <name>App BMI</name>

  <description>
      App per il calcolo del BMI dati il peso in Kg, l'altezza in metri, il sesso, indica come il BMI si posiziona nella tabella di riferimento.
  </description>

  <author email="gringhi.caterina@canossamilano.org">
      Gringhi Caterina
  </author>
 
 <platform name="android" />

 <icon src="bmii.jpg" platform="android" qualifier="ldpi" />
 <icon src="bmii.jpg" platform="android" qualifier="mdpi" />
 <icon src="bmii.jpg" platform="android" qualifier="hdpi" />

 <access origin="*"/>
  <plugin name="cordova-plugin-whitelist" source="npm"/>
   <!--abilita links esterni-->
 <allow-navigation href="*://*getskeleton.com/*"/>

</widget>
